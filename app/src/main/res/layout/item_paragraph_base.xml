<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/paragraphEditBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="0px"
        android:layout_height="34dp"
        android:scaleType="centerInside"
        android:tint="@color/iconColorNoBg"
        android:src="@drawable/ic_drag_handle_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/dragView"
        android:visibility="visible"/>

    <ImageView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:scaleType="centerInside"
        android:tint="@color/iconColorNoBg"
        android:src="@drawable/ic_bubble_chart_black_24dp"
        android:id="@+id/styleBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/dragView" />

    <FrameLayout
        android:id="@+id/itemContentGroup"
        app:layout_constraintTop_toBottomOf="@id/dragView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>