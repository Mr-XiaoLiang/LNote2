<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/timerView"
        layout="@layout/item_main_note_time"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/noteItemCardColor"
        android:layout_width="0px"
        android:layout_weight="1"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/noteLabelView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/noteItemLabelBackground"
                android:src="#FF0000"
                android:layout_width="5dp"
                android:layout_height="0px"/>

            <TextView
                android:id="@+id/noteTitleView"
                android:textColor="@color/noteItemTitle"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/noteLabelView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/app_name"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:lines="1"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:id="@+id/noteOverviewView"
                android:text="@string/app_name"
                android:textSize="15sp"
                android:textColor="@color/noteItemOverview"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/noteTitleView"
                app:layout_constraintRight_toRightOf="@id/noteTitleView"
                app:layout_constraintTop_toBottomOf="@id/noteTitleView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <View
                android:id="@+id/expenditureView"
                android:background="@color/noteItemExpenditure"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/incomeView"
                android:background="@color/noteItemIncome"
                android:layout_width="20dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_goneMarginEnd="5dp"
                app:layout_constraintRight_toLeftOf="@id/expenditureView"/>

            <View
                android:id="@+id/alertView"
                android:background="@color/noteItemAlert"
                android:layout_width="20dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="4dp"
                app:layout_goneMarginEnd="5dp"
                app:layout_constraintRight_toLeftOf="@id/incomeView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>